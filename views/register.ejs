<!DOCTYPE html>
<html>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/swiftpharma.css">
    <link rel="website icon" href="/images/pharmacy-logo-by-Vexels.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/js/style.js" async></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" async></script>


    <head>
        <title>SwiftPharma</title>
    </head>

    <body>


  <section>
    <div>
      <div class="container-header">
        <div class="container">
          <h1>SwiftPharma</h1>
          <img src="/images/pharmacy-logo-by-Vexels.png" class="image header-logor" alt="pharmacy-logo-by-Vexels">
        </div>
      </div>

      <div class="container-header register">
        <h1 class="header-style">Create Account</h1>
        <form action="/auths/register" method="post">
          <div class="container">
            <label for="name">Name</label>
            <input class="reg-cred" type="text" id="name" name="name" size="35%" required>
          </div>
          <div class="container">
            <span class="container">
              <label for="email">Email</label>
              <input class="reg-cred" type="email" id="email" name="email" required>
            </span>

            <span class="container">
              <label for="password">Password</label>
              <input class="reg-cred" type="password" id="password" name="password" required>
            </span>
          </div>
          <hr>
          <div class="container">
            <label for="address">Address</label>
            <input class="reg-cred" type="text" id="address" name="address" size="70%" required>
          </div>
          <div class="container">
            <span class="container">
              <label for="city">City</label>
              <input class="reg-cred" type="text" id="city" name="city" required>
            </span>
            <span class="container">
              <label for="state">State</label>
              <input class="reg-cred" type="text" id="state" name="state" required>
            </span>
            <span class="container">
              <label for="pincode">Pincode</label>
              <input class="reg-cred" type="text" id="pincode" name="pincode" required>
            </span>
          </div>
          <hr>
          <div class="container">
            <label for="phone_no">Phone Number</label>
            <input class="reg-cred" type="text" id="phone_no" name="phone_no" size="30%" required>
          </div>
          <div class="container">
            <label for="dob">Date of Birth (dd/mm/yyyy)</label>
            <input class="reg-cred" type="text" id="dob" name="dob" required>
            <span class="container"></span>
            <label for="sex">Sex</label>
            <input class="reg-cred" type="text" id="sex" name="sex" size="10%" required>
          </div>
          <div class="container">
            <button class="button register-btn" type="submit">Register</button>
          </div>
        </form>

        <div class="container" style="background-color:#f1f1f1">
          <a href="/">
            <input class="button cancel" type="submit" value="Cancel">
          </a>
          Already a <a href="/auths/login">user?</a>
        </div>

      </div>
  </section>
  <!-- Already a <a href="/auths/login">user?</a> -->

  <%-include('footer');-%>